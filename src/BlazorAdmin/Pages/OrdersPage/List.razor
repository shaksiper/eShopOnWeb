@page "/admin/orders"
@attribute [Authorize(Roles = BlazorShared.Authorization.Constants.Roles.ADMINISTRATORS)]
@inherits BlazorAdmin.Helpers.BlazorComponent
@namespace BlazorAdmin.Pages.OrdersPage

<PageTitle>eShopOnWeb Admin: Order List</PageTitle>

<h1>Order List</h1>

@if (orders == null)
{
    <Spinner></Spinner>
}
else
{

    <p class="esh-link-wrapper">
    create button was here
</p>

    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="cursor-pointer">
        @foreach (var order in orders)
            {
                <tr @onclick="@(() => DetailsClick(order.id))">
                    <td>
                        img
                    </td>
                    <td>@order.id</td>
                    <td>
                        <button @onclick="@(() => EditClick(order.id))" @onclick:stopPropagation="true" class="btn btn-primary">
                            Edit
                        </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <Details OnEditClick="EditClick" @ref="DetailsComponent"></Details>
    <Edit OnSaveClick="ReloadCatalogItems" @ref="EditComponent"></Edit>
}
